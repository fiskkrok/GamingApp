{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 5
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      },
      {
        "Endpoint": "*",
        "Period": "1d",
        "Limit": 10000
      }
    ],
    "EndpointSpecificRules": [
      {
        "Endpoint": "*/api/games/*",
        "Period": "1m",
        "Limit": 30
      },
      {
        "Endpoint": "*/api/categories/*",
        "Period": "1m",
        "Limit": 20
      }
    ],
    "IpWhitelist": [ "127.0.0.1", "::1" ],
    "ClientWhitelist": [ "internal-service-1", "monitoring-service" ]
  },
  "ClientRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "ClientIdHeader": "X-ClientId",
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 200
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 2000
      },
      {
        "Endpoint": "*",
        "Period": "1d",
        "Limit": 20000
      }
    ]
  },
  "ConnectionStrings": {
    "Redis": "localhost"
  }
}
